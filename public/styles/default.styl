@require "common"

html
    box-sizing border-box

*, *:before, *:after
    -webkit-box-sizing inherit
    -moz-box-sizing inherit
    box-sizing inherit

body
    background-color color-white
    color color-text
    font-family font-family
    line-height 1

a
    color inherit
    text-decoration none

a:hover,
a:active
    color color-gray
    border-bottom 5px solid color-white

img
    max-width 100%
    height auto
    vertical-align middle

h1
    font-size 2em

h2
    font-size 1.5em

h3
    font-size 1.25em

h4, h5
    font-size 1.125em

h6
    font-size 1em

h1, h2, h3, h4, h5, h6
    margin 0

p, pre, ul, ol
    line-height 1.4

pre
    font-family monospace
    overflow-wrap break-word
    white-space pre-wrap
    word-break break-all
    font-size 1.076923077em
    line-height 1.714285714em

ul, ol
    list-style none
    margin 0

hr
    border 0
    border-top 1px solid color-silver

textarea
    resize none
    width 100%
    height 12.5em
    padding 10px
